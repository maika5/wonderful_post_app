<p id="notice"><%= notice %></p>

<h1>マイページ</h1>

  <thead>
    <tr>
      <th scope="col">タイトル</th>
      <th scope="col">内容</th>
    </tr>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td class="hstack gap-3">
          <%= link_to '新規投稿', new_article_path, class: "btn btn-info" %>
          <%= link_to '投稿詳細', article, class: "btn btn-success mr-1" %>
          <%= link_to '編集', edit_article_path(article), class: "btn btn-warning"%>
          <%= link_to '削除', article_path(article), class: "btn btn-danger", method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
